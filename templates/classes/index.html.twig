{% extends 'base.html.twig' %}

{% block title %}Add Classes {% endblock %}

{% block body %}
<div  class="container" >
    <h1>Add Class</h1>
    {{form_start(form)}}
    {{ form_widget(form)}}
<div class="mt-1 form-group">
    <input class="btn btn-primary" type="Submit" value="Add Class"/>
</div>
{{form_end(form)}}
</div>
</div>

    <div class="mt-3 container">
    <table class="table table-bordered">
    <tr id="a">  
<th id="ClassId">ClassId</th>
<th id="Class_Name">Class_Name</th> 
<th id="Student_Count">Student_Count</th>
<th id="Edit">Edit</th> 
<th id="Delete">Delete</th>  
</tr>
{% set a=1 %}
{% for class in Classes %}
 <tr id="a">  
 <td id="{{class.id}}">{{a}}</td>   
 <td id="{{class.getClassName()}}">{{class.getClassName()}}</td> 
 <td id="" class="Student_Count">0</td> 
 <td><button id="{{class.id}}" class="edit_data btn btn-info">Edit</button></td>
 <td><button id="{{class.id}}" class="delete_data btn btn-danger">Delete</button></td>
</tr>  
{% set a=a+1 %}
{% endfor %}
   </table>
</div>
{% block JQuery %}

<script>  
$(document).ready(function(){
    $('.delete_data').click(function(){
        var id = $(this).attr("id");
        if(confirm("Are you sure you want to delete this?"))
        {
         window.location="/DeletedClasses/+id;
        }
        else
        {
         return false;
        }
    });
});
</script>
{% endblock %}
{% endblock %}

