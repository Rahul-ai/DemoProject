    {{form_start(form)}}
    {{ form_widget(form)}}
    <input class="mt-2 btn btn-primary" type="Submit" value="Add Employee"/>
</div>
{{form_end(form)}}
{{form_end(form)}}
</div>


 <div class="mt-3 container">
    <table class="table table-bordered">
    <tr id="a">  
<th id="ClassId">Employee Code</th>
<th id="Class_Name">Employee Name</th> 
<th id="Student_Count">Employee role</th>
<th id="Edit">Edit</th> 
<th id="Delete">Delete</th>  
</tr>
{% set a=1 %}
{% for Employee in Employes %}
 <tr id="a">  
 <td id="{{Employee.id}}">{{Employee.EmployeeCode}}</td>   
 <td id="{{Employee.Name}}">{{Employee.Name}}</td> 
 <td id="" class={{Employee.role}}>{{Employee.role}}</td> 
 <td><a id="{{Employee.id}}" href="PutEmployee/{{Employee.id}}" class="edit_data btn btn-info">Edit</a></td>
 <td><button id="{{Employee.id}}" class="delete_data btn btn-danger">Delete</button></td>
</tr>  
