{% endfor %}
   </table>
</div>
{% endblock %}

{% block JQuery %}
<script>
$(document).ready(function(){
    $('.delete_data').click(function(){
        var id = $(this).attr("id");
        if(confirm("Are you sure you want to delete this?"))
        {
         window.location="/DeletedEmployee/"+id;
        }
        else
        {
         return false;
        }
    });
});
</script>
{% endblock %}
