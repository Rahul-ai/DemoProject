{% extends 'base.html.twig' %}

{% block title %}Hello AttendanceController!{% endblock %}

{% block body %}
<div  class="container" >
    <h1>Add Attendence</h1>
    {{form_start(form)}}
    {{ form_widget(form)}}
    <div>
    <input class="btn btn-primary" type="Submit" value="ShowAttendence"/>
</div>
{{form_end(form)}}
</div>
</div>

<div class="mt-5 container">
 {% if Addendance %}
           <table class="table table-bordered">
                <tr>
                     <th>Adm No</th>
                     <th>Name</th>
                     <th>Class</th>
                      <th>Status</th>
                </tr>
                  {% for data in Addendance %}
                  <tr>
                     <td>{{ data.Admission_Number }}</td>
                     <td>{{ data.Name }}</td>
                     <td>{{ data.Class_Name }}</td>
                     <td>{{ data.Status}}</td>
                  </tr>
                  {% endfor %}
            </table>
    {% endif %}
</div>
{% endblock %}
